@model IEnumerable<Book>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Publisher</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td><a asp-action="Item" asp-controller="Books" asp-route-id="@book.BookId">@book?.Title</a></td>
                <td>"@book?.Publisher" (@book?.PublishedYear)</td>
                <td>@book.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>