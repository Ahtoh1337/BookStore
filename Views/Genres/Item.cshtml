@model Genre
@{
    ViewData["Title"] = Model?.Name;
}
<h1>
    @Model?.Name
</h1>
<h5>Books in this genre: @Model.Books.Count</h5>
<partial name="_BookListPartial" model="Model.Books" />
@if (User.IsInRole("Admin") || User.IsInRole("Finance") || User.IsInRole("Marketing"))
{
    <div><a asp-action="Delete" asp-route-id="@Model.GenreId">Delete</a></div>
}